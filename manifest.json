{
 "manifest_version": 2,
 "name": "Youtube 2 VLC", 
 "description": "This extension provides a simple way from youtube to play or enqueue a video in VLC.", 
 "version": "1.0",
 "background": {
	    "scripts": ["background.js"],
	    "persistent": false
 },
 "permissions": [
  "http://*/*",
  "https://*/*",
  "declarativeContent",
  "tabs"
 ],
 "page_action": {
          "default_icon": {                    
            "38": "img/icon.png",
            "128": "img/icon128.png"
          },
          "default_title": "Youtube 2 VLC title",
          "default_popup": "popup.html"
        },
 "icons": { 
  "128" : "img/icon128.png"
 }
}